		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter" />
		<antcall target="build" />
	</target>
	<target name="Test_UI">
		<mkdir dir="${junit.output.dir}" />
		<junit fork="yes" printsummary="withOutAndErr">
			<formatter usefile="true" type="plain"/>
			<formatter type="xml" />
			<test name="com.portal_ui.SignIn" todir="${junit.output.dir}" />
			<test name="com.portal_ui.DragTab" todir="${junit.output.dir}" />
			<test name="com.portal_ui.AddGadget" todir="${junit.output.dir}" />
			<test name="com.portal_ui.Tabs" todir="${junit.output.dir}" />
			<test name="com.portal_ui.TopMenu" todir="${junit.output.dir}" />
			<test name="com.portal_ui.DragDrop" todir="${junit.output.dir}" />
			<test name="com.portal_ui.AssignTeam" todir="${junit.output.dir}" />
