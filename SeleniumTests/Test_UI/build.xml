		<mail mailhost="smtp.gmail.com" mailport="465" messagemimetype="text/html" subject="Selenium Test portal" user="conexttest@gmail.com" ssl="on" password="surfconext">
			<from address="conexttest@gmail.com" />
			<to address="femo@surfnet.nl" />
			<replyto address="femo@surfnet.nl" />
